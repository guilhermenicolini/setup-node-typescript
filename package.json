{
  "name": "setup-node-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "npm t -- --watch --config ./jest.unit.config.js",
    "test:integration": "npm t -- --watch --config ./jest.integration.config.js",
    "test:coverage": "npm t -- --coverage",
    "test:staged": "npm t -- --findRelatedTests",
    "prepare": "husky install",
    "update": "ncu --color --interactive && npm i",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --clear -r dotenv/config src/index.ts",
    "start": "node dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.7.2",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^14.0.1",
    "npm-check-updates": "^16.14.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "module-alias": "^2.2.3"
  }
}
